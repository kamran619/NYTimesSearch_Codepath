<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="articlesearch.newyorktimes.codepath.newyorktimesarticlesearch.FilterFragment">

    <TextView
        android:id="@+id/tvBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Date"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/etBegin"
        android:layout_marginLeft="10dp" />
    <EditText
        android:id="@+id/etBegin"
        android:cursorVisible="false"
        android:editable="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/tvBegin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </EditText>

    <TextView
        android:id="@+id/tvSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Order"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_below="@+id/tvBegin"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp" />

    <Spinner
        android:id="@+id/spSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBegin"
        android:layout_toRightOf="@+id/tvSort"
        android:layout_toEndOf="@+id/tvSort"
        android:layout_marginTop="35dp"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </Spinner>

    <TextView
        android:id="@+id/tvNewsDeskValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News Desk Values"
        android:layout_below="@+id/spSort"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10sp"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbArts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNewsDeskValues"
        android:layout_toRightOf="@+id/tvNewsDeskValues"
        android:text="Arts" />

    <CheckBox
        android:id="@+id/cbFashionAndStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbArts"
        android:layout_toRightOf="@+id/tvNewsDeskValues"
        android:text="Fashion and Style" />

    <CheckBox
        android:id="@+id/cbSports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbFashionAndStyle"
        android:layout_toRightOf="@+id/tvNewsDeskValues"
        android:text="Sports" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@+id/cbSports"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
